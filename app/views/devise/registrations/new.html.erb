<%#= render 'shared/second-header' %>





<%# 「モデル名」にはUserモデルであれば@userを渡す。 %>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<%# //「モデル名」にはUserモデルであれば@userを渡しす。 %>

  <div class="form-wrap">
    
  </div>
  
  <div class="form-wrap">
  <%= link_to image_tag("fourth-wave-logo.png", class:"fourth-icon"), "/" %>
    <div class="form-header">
      <h1 class="form-header-title">
        Sign Up
      </h1>
    </div>
  </div>

  <%# エラーメッセージ%>
  <%# render 'shared/error_messages', model: f.object %>
  <%# //エラーメッセージ%>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">ニックネーム</label>
      <span class="indespensable">必須</span>
    </div>
    <%= f.text_area :nickname, class: "input-default", id: "nickname", placeholder:"自由に入力してください", maxlength:"40"%>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">Eメール</label>
      <span class="indespensable">必須</span>
    </div>
    <%= f.email_field :email, class: "input-default", id: "email", placeholder:"Eメールアドレスを入力してください"%>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
      <span class="indespensable">必須</span>
    </div>
    <%= f.password_field :password, class: "input-default", id: "password", placeholder:"半角英数字8文字以上" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード（確認）</label>
      <span class="indespensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class: "input", id: "password_confirmation", placeholder:"同じパスワードを入力してください" %>
  </div>

  <div class="form-group">
      <p class="form-info-header">ご本人確認</p>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">お名前</label>
      <span class="indespensable">必須</span>
    </div>
    <div class="input-name-wrap">
      <%= f.text_area :first_name, class: "input-name", id:"first-name", placeholder:"名字" %>
      <%= f.text_area :last_name, class: "input-name", id:"last-name", placeholder:"名前" %>
    </div>
    </div>
      <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">フリガナ</label>
        <span class="indespensable">必須</span>
        </div>
      <div class="input-name-wrap">
        <%= f.text_area :first_ruby, class: "input-name", id:"first-ruby", placeholder:"カタカナ" %>
        <%= f.text_area :last_ruby, class: "input-name", id:"last-ruby", placeholder:"カタカナ" %>
      </div>
    </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">生年月日</label>
      <span class="indespensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>" + "<p> 日 </p>") %>
    </div>
  </div>
  <div class="form-group">
    <div class="register-btn">
      <%= f.submit "会員登録", class:"register-green-btn"%>
    </div>
    <%= link_to 'TopPageへ戻る', root_path, class:'to-root' %>
  </div>


<% end %>