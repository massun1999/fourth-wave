<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='header-contens'>
    <div class='icon-content'>
      <%= link_to image_tag("fourth-wave-logo.png", class: "fourth-icon"), "/" %><%#アイコン画像に変更%>
    </div>
    <%= form_with(url: search_ideas_path, local: true, method: :get, class:"search-form") do |f| %>
      <%= f.text_field :keyword, placeholder: 'キーワードから探す', class:'input-box' %>
      <%= f.submit "検索",class:"search-button" %>
    <% end %>
    <%= link_to image_tag("mail.png", class: "brand-list"), '#' %>
    <div class='nav'>
      <div class='nav-drawer'>
        <% if user_signed_in? %>
          <div id="nav-content"><%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname"%></div> 
          <div id="vav-content"><%= link_to 'ユーザー管理', edit_user_path(current_user.id)%>
          <div id="nav-content"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout"%></div> 
        <% else %>
          <div id="nav-content"><%= link_to 'ログイン', user_session_path, class: "login" %></div>
          <div id="nav-content"><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></div>
        <% end %>
      </div>
    </div>
  </div>
</header>