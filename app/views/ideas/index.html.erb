  <%#商品一覧%>
  <div class='idea-contents'>
  <%= link_to '新規投稿ページ', new_idea_path %>
    <%= link_to 'New Ideas!', '#', class: 'title' %>
  
    <ul class='idea-lists'>
      <% @ideas.each do |idea| %>
        <li class='list'>
          <%= link_to(idea_path(idea.id)) do %>
            <div class='idea-info'>
              <div class='idea-title'><%= idea.title %></div>
              <div class="idea-copy"><%= idea.price %>円</div>
              <div class="idea-format"><%= idea.format.name %></div>
              <div class="idea-category"><%= idea.category.name %></div>
            </div>

            <div class="idea-image-content">
              <%= image_tag idea.image, class: "item-img" if idea.image.attached? %>

              <%#売れていればsold%>
              <div class="sold">
                <span>finish!!</span>
              </div>
              <%# //売れていればsold%>

            </div>
          <% end %>
        </li>
      <% end %>

        <li class='list'>
